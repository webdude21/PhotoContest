extends ../includes/layout
block meta-data
    meta(property="og:url" content=path)
    meta(property="og:title" content="#{contestant.fullName}")
    meta(property="og:image" content=contestant.pictures[0].url)
    meta(property="fb:app_id" content=facebookClientID)
block main-content
    if disapproved
        .alert.alert-dismissible.alert-danger #{disapproved}
            button.close(data-dismiss="alert") ×
    .container-fluid
        H2.text-center.break-word #{contestant.fullName}
        div.participant-images.panel-body.image-container.text-center
            each picture in contestant.pictures
                img.img-rounded.img-thumbnail(src=picture.url)
            else
                h5 Няма снимки!
            hr
            p Възраст: #{contestant.age}
            if contestant.comment
                p.break-word Коментар: #{contestant.comment}
            hr
            .fb-like(data-href=path, data-layout="button_count", data-action="like",
            data-colorscheme="dark", data-show-faces="false", data-share="true")
