extends ../../includes/layout
block main-content
    H4 Потребители:
    hr
    .row
        table(class="table table-striped table-hover")
            thead
                tr
                    th #
                    th Име:
                    th Възраст:
                    th Одобрение:
                    th Харесвания:
                    th Дата на регистрация:
            tbody
                for contestant, index in contestants.data
                    tr
                        td #{index + 1}
                        td
                            a(href="./#{contestant._id}") #{contestant.fullName}
                        td
                            span #{contestant.age}
                        td
                            span #{contestant.approved ? 'Да' : 'Не'}
                        td
                        td #{contestant.registerDate}