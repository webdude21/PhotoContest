extends ../includes/layout

block main-content
    .well
        form.form-horizontal(name="signUpForm", method="post")
            fieldset
                legend Регистрация
                .form-group
                    label.col-md-2.control-label(for="first-name") Име
                    .col-md-10
                        input.form-control(type="text", id="first-name",
                        placeholder="Име", name="firstName", required)
                .form-group
                    label.col-md-2.control-label(for="last-name") Фамилия
                    .col-md-10
                        input.form-control(type="text", id="last-name"
                        placeholder="Фамилия", name="lastName", required)
                .form-group
                    label.col-md-2.control-label(for="username") Потребителско име
                    .col-md-10
                        input.form-control(type="text", id="username",
                        placeholder="Потребителско име", name="username", required)
                .form-group
                    label.col-md-2.control-label(for="email-address") Email
                    .col-md-10
                        input.form-control(type="email", id="email-address",
                        placeholder="твоят@email.com", name="email", required)
                .form-group
                    label.col-md-2.control-label(for="password") Парола
                    .col-md-10
                        input.form-control(type="password", id="password",
                        placeholder="Парола", name="password", required)
                .form-group
                    label.col-md-2.control-label(for="confirm-password") Потвърждаване на паролата
                    .col-md-10
                        input.form-control(type="password", id="confirm-password",
                        placeholder="Парола", name="confirmPassword", required)
                .pull-right
                    input.btn.btn-primary(type="submit", value="Регистрация")
                    a.btn.btn-primary(href="/") Отказ